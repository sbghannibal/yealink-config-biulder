RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rewrite .boot requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+\.boot)$ index.php [QSA,L]

# Rewrite .cfg requests to cfg.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+\.cfg)$ cfg.php [QSA,L]

# Allow .boot files - NO AUTH (phone doesn't support it)
<Files "*.boot">
    SSLVerifyClient none
    Allow from all
</Files>

# Allow .cfg files - NO AUTH (phone can't authenticate)
<Files "*.cfg">
    SSLVerifyClient none
    Allow from all
</Files>

# Allow certificates - NO AUTH
<FilesMatch "\.pem$|\.crt$">
    SSLVerifyClient none
    Allow from all
</FilesMatch>
