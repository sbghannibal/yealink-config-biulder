RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rewrite .cfg requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+\.cfg)$ index.php [QSA,L]

# Allow .cfg files - NO client cert required
<Files "*.cfg">
    SSLVerifyClient none
    Allow from all
</Files>
